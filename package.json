{
    "name": "cart-service",
    "version": "0.1.0",
    "description": "Server de Carrito",
    "repository": {
        "type": "git",
        "url": "https://github.com/nmarsollier/2018_microservicios.git"
    },
    "author": "Nestor Marsollier",
    "license": "MIT",
    "scripts": {
        "start": "npm run build && npm run watch",
        "build": "npm run build-ts && npm run tslint && npm run apidoc && npm run apidocmd",
        "serve": "node dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"nodemon dist/server.js\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "apidoc": ".\\node_modules\\.bin\\apidoc -i src -o .\\dist\\public",
        "apidocmd": ".\\node_modules\\.bin\\apidoc-markdown2 -p .\\dist\\public -o README-API.md"
    },
    "dependencies": {
        "amqplib": "0.10.3",
        "async": "3.2.4",
        "body-parser": "1.20.1",
        "compression": "1.7.4",
        "connect-mongo": "4.6.0",
        "cors": "2.8.5",
        "dotenv": "16.0.3",
        "escape-html": "1.0.3",
        "express": "4.18.1",
        "helmet": "6.0.0",
        "jimp": "0.16.2",
        "mongoose": "6.6.5",
        "mongoose-paginate-v2": "^1.7.1",
        "morgan": "1.10.0",
        "node-cache": "5.1.2",
        "typed-rest-client": "1.8.9",
        "winston": "3.8.2"
    },
    "devDependencies": {
        "@types/amqplib": "0.8.2",
        "@types/async": "3.2.15",
        "@types/body-parser": "1.19.2",
        "@types/compression": "1.7.2",
        "@types/cors": "2.8.12",
        "@types/escape-html": "1.0.2",
        "@types/express": "4.17.14",
        "@types/helmet": "4.0.0",
        "@types/jest": "29.1.2",
        "@types/mongodb": "4.0.7",
        "@types/mongoose": "5.11.97",
        "@types/morgan": "1.9.3",
        "@types/node": "18.8.3",
        "apidoc": "0.22.1",
        "apidoc-markdown2": "0.3.7",
        "concurrently": "7.4.0",
        "nodemon": "2.0.20",
        "tslint": "6.1.3",
        "typescript": "4.8.4"
    }
}
